<ion-view view-title="收货地址" hide-tabs='true'>
  <ion-content class="address_page set_bg_color">
      <div class="list" >
        <div class="address_list item" ng-repeat="address in addresslist">
          <div class="choose_mark fleft">
            <tpl ng-if="address.choose_mark==1">
              <div class="choose_mark_icon">
                  
              </div>
              <i class="icon-uniE61D choose_mark_img"></i>
            </tpl>
          </div>
          <div class="address_right fleft">
            <div class="address_name fleft"> {{address.name}}</div>
            <div class="address_phonenum ">{{address.phonenum}}</div>
            <div class="address_text">{{address.text}}</div>
          </div>
          <div class="edit_mark fleft">
              <i class="icon-uniE61C"> </i>
          </div>
        </div>

      </div>
  </ion-content>
  <a href="#/tab/createaddress" class="new_address">
    <div > <i class="icon-uniE622"></i> 新建地址 </div>
  </a>
</ion-view>
