<!--
Create tabs with an icon and label, using the tabs-positive style.
Each tab's child <ion-nav-view> directive will have its own
navigation history that also transitions its views in and out.
-->

<ion-side-menus enable-menu-with-back-views="false">
    <ion-side-menu-content>
        <ion-nav-bar class="bar-calm">
            <ion-nav-back-button></ion-nav-back-button>
            <ion-nav-buttons side="left">
                <button class="button button-icon button-clear ion-navicon" menu-toggle="left">
                </button>
            </ion-nav-buttons>
        </ion-nav-bar>

        <ion-tabs class="tabs-icon-top" ng-class="{'tabs-item-hide': hideTabs}">
            <!-- Dashboard Tab -->
            <ion-tab title="首页" icon-off="icon-uniE61D2 job-size" icon-on="icon-uniE61D2 job-size" href="#/tab/home/" class="hide-on-keyboard-open">
                <ion-nav-view name="tab-home"></ion-nav-view>
            </ion-tab>

            <!-- Chats Tab -->
            <!-- <ion-tab title="我的课" icon-off="icon-uniE60D2 job-size" icon-on="icon-uniE60D2 job-size" href="#/tab/allcourse"> -->
            <ion-tab title="我的课" icon-off="icon-uniE60D2 job-size" icon-on="icon-uniE60D2 job-size" href="#/tab/mycourse" class="hide-on-keyboard-open">
                <ion-nav-view name="tab-allcourse"></ion-nav-view>
            </ion-tab>


            <!-- Account Tab -->
            <ion-tab title="个人中心" icon-off="icon-uniE6042 job-size" icon-on="icon-uniE6042 job-size" href="#/tab/account" class="hide-on-keyboard-open">
                <ion-nav-view name="tab-account" hidden="true"></ion-nav-view>
            </ion-tab>
        </ion-tabs>
    </ion-side-menu-content>
    <ion-side-menu side="left" ng-controller="leftmenuCtrl" >
        <ion-content has-header="true" class="job-leftmenu" >
            <div class="job-login-icon" ng-click="tologin()" ng-if="haslogin == 0">
                <div class="icon icon-uniE614 job-login-icon-head"></div>
                <div class="job-login-icon-font">点击登录</div>
            </div>
            <div class="job-login-icon" ng-if="haslogin == 1">
                <div class="job-login-icon-head"><img ng-src="{{headimg}}"></div>
                <div class="job-login-icon-font">{{username}}</div>
            </div>
            <div class="job-login-tpanel">
                <div class="job-login-type" ng-repeat="(key, value) in categoryData" ng-click="toCategory({{value.id}})">
                    <div class="icon {{value.icon}}"></div>
                    <span>{{value.name}}</span>
                </div>
            </div>
        </ion-content>
      </ion-side-menu>   
</ion-side-menus>