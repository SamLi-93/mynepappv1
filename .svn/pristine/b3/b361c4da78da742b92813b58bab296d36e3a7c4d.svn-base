<!--
Create tabs with an icon and label, using the tabs-positive style.
Each tab's child <ion-nav-view> directive will have its own
navigation history that also transitions its views in and out.
-->
<ion-tabs class="tabs-icon-top tabs-color-active-calm tabs-color-calm" ng-class="{'tabs-item-hide': hideTabs}">

  <!-- Dashboard Tab -->
  <ion-tab title="首页" icon-off="icon-uniE61D2 job-size" icon-on="icon-uniE61D2 job-size" href="#/tab/home/">
    <ion-nav-view name="tab-home"></ion-nav-view>
  </ion-tab>

  <!-- Chats Tab -->
  <!-- <ion-tab title="我的课" icon-off="icon-uniE60D2 job-size" icon-on="icon-uniE60D2 job-size" href="#/tab/allcourse"> -->
  <ion-tab title="我的课" icon-off="icon-uniE60D2 job-size" icon-on="icon-uniE60D2 job-size" href="#/tab/mycourse">
    <ion-nav-view name="tab-allcourse"></ion-nav-view>
  </ion-tab>


  <!-- Account Tab -->
  <ion-tab title="个人中心" icon-off="icon-uniE6042 job-size" icon-on="icon-uniE6042 job-size" href="#/tab/account">
    <ion-nav-view name="tab-account" hidden="true"></ion-nav-view>
  </ion-tab>


</ion-tabs>
